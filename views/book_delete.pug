extends layout

block content

  h1 #{title}: #{book.title}

  if book_instances.length

    p #[strong Delete the following instances before attempting to delete this book.]

    div(style='margin-left:20px;margin-top:20px')

      h4 instances of #{book.title}

      dl
      each instance in book_instances
        dt
          a(href=instance.url) #{book.title}
        dd #{instance.imprint}

  else
    p Do you really want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id )
        input#author.form-control(type='hidden',name='authorid', required='true', value=book.author )
      button.btn.btn-primary(type='submit') Delete